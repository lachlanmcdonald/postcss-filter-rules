{
  "name": "postcss-filter-rules",
  "version": "0.3.1",
  "description": "PostCSS plugin to filter rules by applying a callback function on each selector. Can be used to filter out individual rules or remove all rules besides those you wish to keep.",
  "keywords": [
    "postcss",
    "css",
    "postcss-plugin",
    "rules",
    "selectors",
    "filter"
  ],
  "author": "Lachlan McDonald <lachlan@radelaide.net>",
  "license": "MIT",
  "repository": "lachlanmcdonald/postcss-filter-rules",
  "bugs": {
    "url": "https://github.com/lachlanmcdonald/postcss-filter-rules/issues"
  },
  "homepage": "https://github.com/lachlanmcdonald/postcss-filter-rules",
  "dependencies": {
    "postcss": "^7.0.17",
    "postcss-selector-parser": "^6.0.2"
  },
  "devDependencies": {
    "@logux/eslint-config": "^29.0.1",
    "eslint": "^6.0.1",
    "eslint-config-postcss": "^3.0.7",
    "eslint-config-standard": "^13.0.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-import-helpers": "^1.0.2",
    "eslint-plugin-jest": "^22.9.0",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.0",
    "jest": "^24.8.0"
  },
  "scripts": {
    "test": "jest",
    "lint": "eslint **/*.js"
  },
  "eslintConfig": {
    "extends": "eslint-config-postcss",
    "rules": {
      "max-len": 0,
      "semi": 0,
      "no-tabs": 0,
      "import-helpers/order-imports": 0,
      "indent": [
        "error",
        "tab"
      ]
    }
  }
}
